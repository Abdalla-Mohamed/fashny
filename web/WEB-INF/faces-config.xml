<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    
    
    <validator>
        <validator-id>com.iti.fashny.validators.CustomeEmailValidator</validator-id>
        <validator-class>com.iti.fashny.validators.CustomeEmailValidator</validator-class>
    </validator>
    
    <application>
        <locale-config>
            <default-locale>en</default-locale>
            <supported-locale>ar</supported-locale>
        </locale-config>
        <resource-bundle>
            <base-name>governoratesProb</base-name>
            <var>bndlGovernorate</var>
        </resource-bundle> 
        <resource-bundle>
            <base-name>Bundle</base-name>
            <var>bundle</var>            
        </resource-bundle>
        
        <resource-bundle>
            <base-name>MyPropertyFile</base-name>
            <var>MyPropertyFile</var>            
        </resource-bundle>
       
    </application>
    <managed-bean>
        <managed-bean-name>tagManagedBeen</managed-bean-name>
        <managed-bean-class>com.iti.fashny.managedbeans.TagManagedBeen</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
</faces-config>
